<h1>Users</h1>

<ul class="user">
  <% @users.each do |user| %>
  <li class="user__name">
    <%= link_to user.id, user_path(user.id) %>
    <%= user.name %>
    <%= link_to "[Edit]", edit_user_path(user.id) %>
    <%= link_to "[Delete]", user_path(user.id), method: :delete, data: {confirm: "are you sure?"} %>
  </li>
  <% end %>
</ul>

<%= link_to "Add New", new_user_path %>
